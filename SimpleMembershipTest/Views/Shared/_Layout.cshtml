<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@(this.ViewBag.Title) - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render( "~/Content/css" )
        @Scripts.Render( "~/bundles/modernizr" )
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="http://xyz37.blog.me" target="_blank">Goto my blog...</a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @(this.Html.Partial( "_LoginPartial" ))
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@(this.Html.ActionLink( "Home", "Index", "Home" ))</li>
                            <li>@(this.Html.ActionLink( "About", "About", "Home" ))</li>
                            <li>@(this.Html.ActionLink( "Contact", "Contact", "Home" ))</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @(this.RenderSection( "featured", false ))
            <section class="content-wrapper main-content clear-fix">
                @(this.RenderBody())
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div style="text-align: center;">
                    <p style="margin: 0;">Copyright &copy; @DateTime.Now.Year <a href="http://x10.mine.nu/redmine" target="_blank">HaveSimple.com</a> All Rights Reserved.</p>
                </div>
            </div>
        </footer>

        @Scripts.Render( "~/bundles/jquery" )
        @(this.RenderSection( "scripts", false ))
    </body>
</html>